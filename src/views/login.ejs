<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center my-3">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages')%>

      <div class="row">
        <div class="col-lg my-3 ">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem uma conta, crie abaixo:</p>
          <form class = "form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label for="nome">Usuário</label><input type="text" name="nome" class="form-control nome">
            </div>
            <div class="form-group">
              <label>Seu e-mail</label><input type="email" class="form-control email" name="email" />
            </div>
            <div class="form-group">
              <label>Sua senha</label><input type="password" class="form-control password " name="password" />
            </div>
            <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg my-3">
          <h4>Faça seu login</h4>
          <p>Se você já tem uma conta, faça login abaixo:</p>
          <form  class = "form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control email " name="email" />
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control password" name="password" />
            </div>
            <button type="submit" class="btn btn-primary my-3">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
